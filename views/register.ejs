   <%- include("partials/_head.ejs") %>

   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="images/loading.gif" alt="#"/></div>
      </div>
      <!-- end loader -->
     
      <%- include("partials/_header.ejs") %>

      <!-- contact -->
        <div class="contact">
          <div class="container">
            <div class="row">
              <div class="col-md-12 ">
                <div class="titlepage text_align_center">
                  <h2>Register</h2>
                </div>
              </div>
              <div class="col-md-8 offset-md-2">
                <form action="/users/register" method="POST" id="request" class="main_form">
                  <div class="row">
                    <div class="col-md-12">
                      <input class="form_control" placeholder="Your Username" type="text" name="username" /> 
                    </div>
                    <div class="col-md-12">
                      <div style="display: none;" class="alert alert-danger" id="username"></div>
                   </div>
                    <div class="col-md-12">
                      <input class="form_control" placeholder="Your Email" type="email" name="email" />                          
                    </div>
                    <div class="col-md-12">
                      <div style="display: none;" class="alert alert-danger" id="email"></div>
                   </div>
                    <div class="col-md-12">
                     <input class="form_control" placeholder="Your Password" type="password" name="password" />                          
                   </div>
                   <div class="col-md-12">
                    <div style="display: none;" class="alert alert-danger" id="password"></div>
                  </div>
                    <div class="col-md-12">
                      <div class="group_form">
                        <button class="send_btn">Register</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <!-- end contact -->

      <script>
        const form = document.querySelector("form");
        const usernameError = document.getElementById("username");
        const emailError = document.getElementById("email");
        const passwordError = document.getElementById("password");

        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          usernameError.textContent = "";
          emailError.textContent = "";
          passwordError.textContent = "";

          usernameError.style.display = "none";
          emailError.style.display = "none";
          passwordError.style.display = "none";

          const username = form.username.value;
          const email = form.email.value;
          const password = form.password.value;

          try {
            const res = await fetch("users/register", {
              method : "POST",
              body : JSON.stringify({ username, email, password }),
              headers : { "Content-Type" : "application/json" }
            });
          } catch (error) {
            
          }


        });

      </script>


